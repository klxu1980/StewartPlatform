//---------------------------------------------------------------------------

#ifndef AccSensorH
#define AccSensorH
//---------------------------------------------------------------------------
class CAccSensor
{
private:
   char __Buffer[32];
   int  __BufSize;
   int  __CommCnt;
public:
   float MinAccX;
   float MinAccY;
   float MinAccZ;
public:
   float GravityX;
   float GravityY;
   float GravityZ;
public:
   float AccX;
   float AccY;
   float AccZ;
private:
   float GetValue(char *Buffer, float Scale){return ((*(Buffer + 1) << 8) | *Buffer) * Scale / 0x1000;}
public:
   CAccSensor(void);
public:
   bool ReceiveValueByte(char Byte);
   float CommRate(float Time);
};
#endif
